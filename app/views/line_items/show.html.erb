<div class="container">
  <div class="row" style="margin-top: 64px">
    <div class="col-lg-8 col-md-8 col-sm-8">
      <h1 style="margin-bottom: 24px">Line Item #<%= @line_item.id %></h1>
    </div>
    <div class="col-lg-2 col-md-2 col-sm-2">
      <%= link_to "Edit Item", edit_line_item_path(@line_item), class: "btn btn-primary", style: "margin: 24px 0;" %><!-- this probably should be right-aligned -->
    </div>
    <div class="col-lg-2 col-md-2 col-sm-2">
      <%= link_to "Delete", line_item_path(@line_item), method: :delete, class: "btn btn-danger", style: "margin: 24px 0;", data: {confirm: 'Are you sure?' } %><!-- this probably should be right-aligned -->
    </div>
  </div>
  <div class="row" style="margin-top: 0px">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="bs-component">
        <table class="table table-bordered table-striped">
          <tr>
            <th>Item Name</th>
            <td><%= @line_item.item_name %></td>
          </tr>
          <tr>
            <th>Item Price</th>
            <td><%= @line_item.item_price %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
