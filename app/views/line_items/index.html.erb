<div class="container">
  <div class="row" style="margin-top: 64px">
    <div class="col-lg-9 col-md-9 col-sm-9">
      <h1 style="margin-bottom: 24px">Listing line items</h1>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3">
      <%= link_to "Add Line Item", new_line_item_path, class: "btn btn-primary", style: "margin: 24px 0;" %><!-- this probably should be right-aligned -->
    </div>
  </div>
  <div class="row" style="margin-top: 0px">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="bs-component">
        <table class="table table-bordered table-striped">
          <tr>
            <th>Name</th>
            <th>Price</th>
            <th></th>
          </tr>

          <% @line_items.each do |line_item| %>
            <tr>
              <td><%= link_to line_item.item_name, line_item_path(line_item) %></td>
              <td><%= line_item.item_price %></td>
              <td class="text-center"><%= link_to 'Edit', edit_line_item_path(line_item), class: "btn btn-primary btn-sm" %>
              <%= link_to 'Delete', line_item_path(line_item), method: :delete, class: "btn btn-primary btn-sm", data: {confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
