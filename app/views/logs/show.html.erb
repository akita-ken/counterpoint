<div class="container">
  <div class="row" style="margin-top: 64px">
    <div class="col-lg-7 col-md-7 col-sm-7">
      <h1 style="margin-bottom: 24px">Log Entry #<%= @log.id %></h1>
    </div>
    <div class="col-lg-5 col-md-5 col-sm-5">
    <%= link_to "Back to List", logs_path, class: "btn btn-default", style: "margin: 24px 0;" %>
      <%= link_to "Edit Item", edit_log_path(@log), class: "btn btn-primary", style: "margin: 24px 0;" %>
      <%= link_to "Delete", log_path(@log), method: :delete, class: "btn btn-danger", style: "margin: 24px 0;", data: {confirm: 'Are you sure?' } %>
    </div>
  </div>
  <div class="row" style="margin-top: 0px">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="bs-component">
        <table class="table table-bordered table-striped">
          <tr>
            <th>Entry date</th>
            <td><%= @log.date %></td>
          </tr>
          <tr>
            <th>Entry description</th>
            <td><%= @log.description %></td>
          </tr>
          <tr>
            <th>Entry duration</th>
            <td><%= @log.duration %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
